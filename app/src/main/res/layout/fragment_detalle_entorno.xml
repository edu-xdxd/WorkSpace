<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header del Entorno -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvEntornoNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del entorno"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tvEntornoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID del entorno"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

                <!-- Estado activo/inactivo -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#E8F5E8"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="#4CAF50"
                        android:backgroundTint="#4CAF50"
                        android:shape="oval" />

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activo"
                        android:textColor="#2E7D32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de Horario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario de Activación"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Hora Inicio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hora de Inicio"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHoraInicio"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12:00"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_time"
                        app:iconGravity="textStart"
                        app:strokeColor="#3F51B5"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <!-- Hora Fin -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hora de Fin"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHoraFin"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12:30"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_time"
                        app:iconGravity="textStart"
                        app:strokeColor="#3F51B5"
                        app:strokeWidth="1dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de Días de la Semana -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Días de Activación"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona los días en que estará activo"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <!-- Primera fila de días -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16px"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkLunes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lun"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkMartes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mar"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkMiercoles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mié"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkJueves"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jue"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Segunda fila de días -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8px"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkViernes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vie"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkSabado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sáb"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <CheckBox
                            android:id="@+id/checkDomingo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dom"
                            android:padding="12dp"
                            android:textSize="12sp"
                            android:buttonTint="#3F51B5" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Espaciador para mantener la alineación -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de Playlist -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simulación de Playlist"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#3F51B5"
                    app:startIconDrawable="@drawable/ic_music"
                    app:startIconTint="#3F51B5">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompletePlaylist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Seleccionar playlist"
                        android:inputType="none"
                        android:padding="16dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de Sensores -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensores del Entorno"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvParametros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parámetros del entorno aparecerán aquí"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="#F8F9FA"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSensores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minHeight="120dp"
                    android:background="#F8F9FA"
                    android:padding="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#3F51B5"
            android:padding="16dp"
            android:text="Guardar Cambios"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </LinearLayout>
</ScrollView>